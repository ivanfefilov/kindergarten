<div class="col-md-6 col-md-offset-3">

<h2><%= t('app.user.edit.name', name: 'учётную запись') %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
    <%= f.label :email %></br>
    <%= f.email_field :email, class: 'form-control', autofocus: true %>
  </div>
  
  <div class="form-group">
    <%= f.label :first_name %><br />
    <%= f.text_field :first_name, class: 'form-control' %>
  </div>
  
  <div class="form-group">
    <%= f.label :last_name %><br />
    <%= f.text_field :last_name, class: 'form-control' %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Ожидается подтверждение для: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="form-group">
    <%= f.label :password %> <i>(Оставьте пустым, если не хотите менять пароль)</i></br>
    <%= f.password_field :password, class: 'form-control', autocomplete: "off" %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation %></br>
    <%= f.password_field :password_confirmation, class: 'form-control', autocomplete: "off" %>
  </div>

  <div class="form-group">
    <%= f.label :current_password %> <i>(Необходимо ввести ваш текщий пароль)</i></br>
    <%= f.password_field :current_password, class: 'form-control', autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit t('app.form.update'), class: 'btn btn-default' %>
  </div>
<% end %>

<h3>Удалить аккаунт</h3>

<p><%= button_to t('app.user.cancel.title'), registration_path(resource_name), class: 'btn btn-error', data: { confirm: "Вы уверены?" }, method: :delete %></p>

<%= link_to t('app.devise.shared.links.back'), :back %>

</div>
